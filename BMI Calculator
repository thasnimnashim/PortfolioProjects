def bmical():
     input("Hello Good Day")
     wt = float(input("Enter your weight in Kilogram:"))
     ht = float(input("Enter your weight in Meters"))
     bmi = float(wt/(ht ** 2))
        
     if (bmi <= 18.5):
         print("Under Weight")
        
     elif (bmi > 18.5) and (bmi <25):
         print("Normal Weight")
        
     elif(bmi >= 25) and (bmi < 30):
          print("Over Weight")
        
     else: 
           print("Obese")
            
bmical()

